<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="de.fluchtwege.nflashcards"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".presentation.activity.nFlashcardsActivity"
            android:label="@string/title_activity_n_flashcards"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.activity.CreateCardActivity"
            android:label="@string/addcard"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".presentation.activity.TestCardActivity"
            android:label="@string/testcard"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".presentation.activity.CardListActivity"
            android:label="@string/cardlist"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>
