<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/big"
        >

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/normal">

            <TextView
                android:id="@+id/kanji"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginLeft="@dimen/normal"
                android:gravity="center"
                android:text="K"
                android:textSize="56dp"/>

            <TextView
                android:id="@+id/hiragana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="@dimen/normal"
                android:layout_marginTop="@dimen/normal"
                android:layout_toRightOf="@id/kanji"
                android:text="hgjgj"
                />

            <TextView
                android:id="@+id/katakana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="@dimen/normal"
                android:layout_marginTop="@dimen/normal"
                android:layout_toRightOf="@id/hiragana"
                android:text="sghdjgsjd"
                />

            <TextView
                android:id="@+id/deutsch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hiragana"
                android:layout_marginLeft="@dimen/normal"
                android:layout_marginTop="@dimen/normal"
                android:layout_toRightOf="@id/kanji"
                android:text="sdjbfksbdjfbsk"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>